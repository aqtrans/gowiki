{{ define "usernav" }}
<div class="usernav">
<fieldset class="fieldset">
  <legend><i class="fa fa-user" aria-hidden="true"></i>User {{ if .UserInfo.Username }}<span><small>(logged in as {{ .UserInfo.Username }})</small></span>{{ end }}</legend>
<ul>
{{ if .UserInfo.Username }}
    <li><a href="/auth/logout">Logout</a></li>
    {{ if .UserInfo.IsAdmin }}    
        <li><a href="/admin">Admin Panel</a></li>
    {{ end }}
    <li>{{ .page.GitStatus }}</li>
{{ else }}
<li><a href="/login">Login</a></li>
{{ end }}
</ul>
</fieldset>
</div>
{{ end }}