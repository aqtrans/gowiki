{{ define "usernav" }}
<div class="callout small primary">
<h5><i class="fa fa-user" aria-hidden="true"></i>User panel{{ if .UN }}<span><small>{{ .page.UN }}</small>{{ end }}</span></h5>
<hr>
<ul>
{{ if .UN }}
    <li><a href="/auth/logout">Logout</a></li>
    {{ if .page.IsAdmin }}    
        <li><a href="/admin">Admin Panel</a></li>
    {{ end }}    
{{ else }}
<li><a href="/login">Login</a></li>
{{ end }}
</ul>
</div>
{{ end }}