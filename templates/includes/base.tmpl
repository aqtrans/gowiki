{{ define "base" }}
<!DOCTYPE html>
<html lang="en" >
<head>
  <title>{{ template "title" . }}|{{ .SiteName }}</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Gowiki">
  <link rel="shortcut icon" type="image/png" href="/assets/favicon.png"/>
  <link rel="shortcut icon" type="image/ico" href="/assets/favicon.ico" />
  <link rel="stylesheet" href="/assets/css/wiki.css">
  <link rel="stylesheet" href="https://use.fontawesome.com/107df40317.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Khand|Open+Sans|Roboto+Condensed:300italic,400italic,700italic,400,700,300|Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic">
</head>
<body>
  <nav>
    <header><a href="/">Wiki</a></header>
      {{ template "sidebar" . }}
  </nav>
  <section>
    {{ .page.FlashMsg }}
    <main>
      <header>
        <h1>{{ template "header_title" . }}</h1>
        {{ block "header" . }}{{ end }}
      </header>
    {{ template "content" . }}
    </main>
{{ end }}
{{ define "header_title" }}
{{ template "title" . }}
{{ end }}