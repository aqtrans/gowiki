{{ define "base" }}
<!DOCTYPE html>
<!--[if IE 9]><html class="lt-ie10" lang="en" > <![endif]--> 
<html class="no-js" lang="en" >
<head>
  {{ template "title" . }}
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Gowiki">
  <link rel="shortcut icon" type="image/png" href="/assets/favicon.png"/>
  <link rel="shortcut icon" type="image/ico" href="/assets/favicon.ico" />
  <link rel="stylesheet" href="/assets/css/normalize.css"> 
  <link rel="stylesheet" href="/assets/css/foundation.css"> 
  <link rel="stylesheet" href="/assets/css/app.css">
  <link rel="stylesheet" href="/assets/css/font-awesome.min.css">
  <script src="/assets/js/modernizr.js"></script>
  <script src="/assets/js/jquery.js"></script>
  <script src="/assets/js/fastclick.js"></script>
  <script src="/assets/js/foundation.min.js"></script>
 </head>
<body>
<div class="sticky">
    <nav class="top-bar" data-topbar role="navigation">
    <ul class="title-area">
        <li class="name">
        <h1><a href="/">My Site</a></h1>
        </li>
        <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
        <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
    </ul>

    <section class="top-bar-section">
        <!-- Right Nav Section -->
        <ul class="right">
        </ul>
        <!-- Left Nav Section -->
        <ul class="left">
        <li><a href="#">Left Nav Button</a></li>
        {{ template "topnav" .}}
        </ul>
    </section>
    </nav>
</div>


<div class="row">
  <div class="small-2 show-for-medium-up columns sidebar">
      <h3><a href="/">Wiki</a></h3>
      {{ template "sidebar" .}}
  </div>
<div class="small-10 columns body">
  <div class="alerts"></div>
{{ template "content" . }}
</div>
</div>
<footer>
</footer>
  <script type="text/javascript" charset="utf-8"> $(document).foundation(); </script>
  <script src="/assets/js/my.js"></script>
  {{ template "extra_scripts" . }}
</body>
</html>
{{ end }}
{{ define "topnav" }}{{ end }}
{{ define "sidebar" }}{{ end }}
{{ define "extra_scripts" }}{{ end }}
