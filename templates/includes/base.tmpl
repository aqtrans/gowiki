{{ define "base" }}
<!DOCTYPE html>
<html lang="en" >
<head>
  {{ template "title" . }}
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Gowiki">
  <link rel="shortcut icon" type="image/png" href="/assets/favicon.png"/>
  <link rel="shortcut icon" type="image/ico" href="/assets/favicon.ico" />
  <link rel="stylesheet" href="/assets/bourbon.css">
 </head>

<section>
  <aside>
    <header><a href="/">Wiki</a></header>
      {{ template "sidebar" .}}
  </aside>

    {{ template "content" . }}
</section>

<div class="modal" id="alert-modal">
    {{ .page.FlashMsg |safeHTML }}
</div>

<div class="modal" id="login-form">
  <input id="login_modal" type="checkbox" />
  <label for="login_modal" class="overlay"></label>
  <article>
    <header>Login</header>
      <label for="login_modal" class="close">&times;</label>
    <section>
    <form method="post" action="/login" id="login">
    <input type="text" id="username" name="username" placeholder="Username">
    <input type="password" id="password" name="password" placeholder="Password">
    <input type="hidden" name="token" value="{{.Token}}">
      <button type="submit" class="button">Login</button>
        </form>
      <label for="login_modal" class="button-dangerous">
        Cancel
      </label>
     </section> 
  </article>
</div>

<footer>
</footer>
  {{ template "extra_scripts" . }}
</html>
{{ end }}
{{ define "extra_scripts" }}{{ end }}
