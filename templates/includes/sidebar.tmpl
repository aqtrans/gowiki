{{ define "sidebar" }}
<fieldset class="fieldset">
  <legend><i class="fa fa-bars" aria-hidden="true"></i>Menu</legend>
<ul>
    <li><a href="/">Home</a></li>
    <li><a href="/list">List</a></li>
    {{ if .UserInfo.Username }}
      <li><a href="/recent">Recent Activity</a></li>
      <li><a href="/tags">Tags</a></li>
    {{ end }}
</ul>
</fieldset>
{{ if .UserInfo.Username }}
  <fieldset class="fieldset">
    <legend>{{ svg "star-empty" }}Favorite Pages</legend>
  <ul>
  {{range $key, $element := .page.Favs}}
  <li><a href="/{{ $key }}">{{ $key }}</a></li>
  {{end}}
  </ul>
  </fieldset>
{{end}}

<form method="GET" action="/new" id="newwiki">
  <div class="input-wrapper">
      <input type="text" placeholder="Add page" id="newwiki" name="newwiki">
      {{.Token}}
      <button type="submit" class="success button"><i class="fa fa-plus fa-fw" aria-hidden="true"></i></button>
  </div>
</form>

<form method="POST" action="/search" id="searchwiki">
  <div class="input-wrapper">
      <input type="text" placeholder="Search" id="searchwiki" name="searchwiki">
      {{.Token}}
      <button type="submit" class="success button"><i class="fa fa-search fa-fw" aria-hidden="true"></i></button>
  </div>
</form> 

    {{ template "usernav" .}}
{{ end }}