{{ define "sidebar" }}
<fieldset class="fieldset">
  <legend>{{ svg "menu" }}Menu</legend>
<ul>
    <li><a href="/">Home</a></li>
    <li><a href="/list">List</a></li>
    {{ if .UserInfo.Username }}
      <li><a href="/recent">Recent Activity</a></li>
      <li><a href="/tags">Tags</a></li>
    {{ end }}
</ul>
</fieldset>

<form method="GET" action="/new" id="newwiki">
  <div class="input-wrapper">
      <input type="text" placeholder="Add page" id="newwiki" name="newwiki">
      {{.Token}}
      <button type="submit" class="success button">{{ svg "plus" }}</button>
  </div>
</form>

<form method="POST" action="/search" id="searchwiki">
  <div class="input-wrapper">
      <input type="text" placeholder="Search" id="searchwiki" name="searchwiki">
      {{.Token}}
      <button type="submit" class="success button">{{ svg "search" }}</button>
  </div>
</form> 

{{ if .UserInfo.Username }}
  <fieldset class="fieldset">
    <legend>{{ svg "star-empty" }}Favorite Pages</legend>
  <ul>
  {{range $key, $element := .page.Favs}}
  <li><a href="/{{ $key }}">{{ $key }}</a></li>
  {{end}}
  </ul>
  </fieldset>
  <fieldset>
    <legend>{{ svg "git-square" }}Git Status</legend>
  <ul>
    <li>{{ .page.GitStatus }}</li>
  </ul>
  </fieldset>
{{end}}

    {{ template "usernav" .}}
{{ end }}