{{ define "sidebar" }}
<fieldset class="fieldset">
  <legend>Wiki</legend>
<ul>
    <li><a href="/">Home</a></li>
    <li><a href="/list">List</a></li>
    <li><a href="/recent">Recent Activity</a></li>
    <li><a href="/tags">Tags</a></li>
</ul>
</fieldset>
<fieldset class="fieldset">
  <legend>Favorite Pages</legend>
<ul>
{{range $key, $element := .page.Favs}}
<li><a href="/{{ $key }}">{{ $key }}</a></li>
{{end}}
</ul>
</fieldset>

<form method="GET" action="/new" id="newwiki">
  <div class="input-wrapper">
      <input type="text" placeholder="Add page" id="newwiki" name="newwiki">
      {{.Token}}
      <button type="submit" class="success button"><i class="fa fa-plus" aria-hidden="true"></i></button>
  </div>
</form>

<form method="POST" action="/search" id="searchwiki">
  <div class="input-wrapper">
      <input type="text" placeholder="Search" id="searchwiki" name="searchwiki">
      {{.Token}}
      <button type="submit" class="success button"><i class="fa fa-search" aria-hidden="true"></i></button>
  </div>
</form> 

    {{ template "usernav" .}}
{{ end }}