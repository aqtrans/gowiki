  <script type="text/javascript" charset="utf-8">
			$('.notification').delegate(".close-button", "click", function(e) {
				hideNotification();
				return false;
			});
      function hideNotification() {
				$('#notification').css('top',-$('#notification').outerHeight());
				setTimeout(function() { $('#notification').removeClass('anim'); }, 1000);
			}
  </script>
