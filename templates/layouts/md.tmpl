{{ define "title" }}<title>{{.page.SiteName}}|{{ .PageTitle }}</title>{{ end }}
{{ define "topnav" }}
    <a href="#" class="button">View</a>
    <a href="/{{.Filename}}/edit" class="pseudo button">Edit</a>
    <a href="/{{.Filename}}/history" class="pseudo button">History</a>
{{ end }}
{{ define "content" }}
<article class="card">
  <header>
    <h1>{{.PageTitle}}</h1>
  </header>
</article>

<article class="card">
  <header>
    <p>Filename:<span class="info label">{{ .Filename }}</span> Private:<span class="info label">{{ .IsPrivate }}</span> 
    Tags:<span class="info label">{{ .frontmatter.Tags }}</span></p>
    <p>Created:<span class="info label">{{ .CreateTime | prettyDate }}</span> Last Modified:<span class="info label">{{ .ModTime | prettyDate }}</span></p>    
  </header>
  <footer>
    {{.wiki.Rendered | safeHTML}}
  </footer>
</article>
{{ end }}
