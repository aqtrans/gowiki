{{ define "title" }}<title>{{.page.SiteName}}|{{ .PageTitle }}</title>{{ end }}
{{ define "sidebar" }}
    {{ template "sidebar_nav" . }}
    {{ template "login_form" . }}
{{ end }}
{{ define "content" }}
    <div class="mdl-grid">
        <div class="info-card mdl-cell--top mdl-card mdl-shadow--4dp">
            <div class="mdl-card__title mdl-card--expand"><h2 class="mdl-card__title-text">{{.PageTitle}}</h2></div>
            <div class="mdl-card__media"></div>
            <div class="mdl-card__supporting-text">
                <span class="label">Filename: {{ .Filename }}</span><br>
                <span class="label">Created: {{ .CreateTime | prettyDate }}</span><br>
                <span class="label">Last Modified: {{ .ModTime | prettyDate }}</span><br>
                <span class="label">Tags: {{ .frontmatter.Tags }}</span>
                <span class="label">Private: {{ .IsPrivate }}</span>                    
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="#">{{ .PageTitle }}</a>
                <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="/{{.Filename}}/edit">Edit</a>
                <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="/{{.Filename}}/history">History</a>    
            </div>
        </div>
    </div>
    <div class="mdl-grid">
        <div class="mdl-cell--bottom mdl-card mdl-shadow--4dp" id="wiki-card">
            <div class="mdl-card__title">
                {{.wiki.Rendered | safeHTML}}
            </div>
        </div>
    </div>    
{{ end }}
