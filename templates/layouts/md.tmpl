{{ define "title" }}<title>{{ .PageTitle }} - {{.PageTitle }}</title>{{ end }}
{{ define "sidebar" }}
    {{ template "sidebar_nav" . }}
    {{ template "sidebar_cats" . }}
{{ end }}
{{ define "content" }}
<h1>{{ .PageTitle }}</h1>
<ul class="breadcrumbs">
  <li class="current"><a href="/{{.Filename}}">Page</a></li>
  <li><a href="/edit/{{.Filename}}">Edit</a></li>
  <li class="unavailable"><a href="#" data-reveal-id="previewModal">Preview</a></li>
</ul>
<hr />
{{$title := .PageTitle}}
<ul class="no-bullet">
<li>Tags: {{ .frontmatter.Tags }}</li>
<li>Created: {{ .frontmatter.Created }}</li>
<li>Last Modified: {{ .frontmatter.LastModTime }}</li>
<li>Filename: {{ .Filename }}</li>
<li>Private: {{ .IsPrivate }}</li>
</ul>
  {{if .wiki.Rendered}}
  <div class="panel">
    {{.wiki.Rendered | safeHTML}}
  </div>
  {{else}}
  <div class="panel">
    {{.wiki.Content}}
  </div>
  {{end}}
{{ end }}
