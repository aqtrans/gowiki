{{ define "title" }}<title>{{ .PageTitle }}</title>{{ end }}
{{ define "sidebar" }}
    {{ template "sidebar_nav" . }}
    {{ template "login_form" . }}
{{ end }}
{{ define "content" }}
<ul class="breadcrumbs">
  <li class="current"><a href="/{{.Filename}}">{{ .PageTitle }}</a></li>
  <li><a href="/{{.Filename}}/edit">Edit</a></li>
  <li><a href="/{{.Filename}}/history">History</a></li>
</ul>
<div class="row wikicontent">
    <div class="small-6 columns panel callout radius">
      <h1>{{.PageTitle}}</h1>
    </div>
    <div class="small-3 columns panel radius" id="frontmatter">
        <span class="label">Filename: {{ .Filename }}</span><br>
        <span class="label">Created: {{ .CreateTime | prettyDate }}</span><br>
        <span class="label">Last Modified: {{ .ModTime | prettyDate }}</span><br>
        <span class="label">Tags: {{ .frontmatter.Tags }}</span>
        <span class="label">Private: {{ .IsPrivate }}</span>
    </div>    
</div>
<div class="row wikicontent">
    <div class="small-10 columns panel">
    {{.wiki.Rendered | safeHTML}}
    </div>
</div>
{{ end }}
