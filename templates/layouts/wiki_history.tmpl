{{ define "title" }}<title>{{.page.SiteName}}|History of {{ .Filename }}</title>{{ end }}
{{ define "content" }}
<article class="card">
  <header>
    <h1>History of {{ .Filename }}</h1>    
  </header>
</article>

<div class="wikitoolbar">
    <ul>
        <li><a href="/{{.Filename}}"><i class="material-icons centericon">visibility</i>View Page</a></li>
        <li><a href="/{{.Filename}}/edit"><i class="material-icons centericon">edit</i>Edit Page</a></li>
        <li class="selected"><a href="#"><i class="material-icons centericon">history</i>Page History</a></li>
   </ul>
</div>
<article class="card wikicontent">
  <footer>
    <table>
    <thead>
        <tr>
        <th width="200">Link</th>
        <th width="250">Date</th>
        <th>Message</th>
        </tr>
    </thead>
    <tbody>
        {{range .FileHistory}}
        <tr>
            <td><a href="/{{.Filename}}?commit={{.Commit}}">{{.Commit}}</a></td>
            <td>{{ .Date|prettyDate }}</td>
            <td>{{ .Message }}</td>
        </tr>  
        {{ end }}
    </table>
  </footer>
</article>
{{ end }}