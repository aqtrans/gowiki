{{ define "title" }}Search Results{{ end }}
{{ define "content" }}
<ul class="tabs">
    <li class="tabs-title is-active"><a href="#">{{ svg "search" }} Search Results</a></li>
</ul>

<main>
    <table>
    <thead>
        <tr>
        <th>Link</th>
        <th>Result</th>
        </tr>
    </thead>
    <tbody>
    {{ $user := .UserInfo.IsLoggedIn }}
    {{ $admin := .UserInfo.IsAdmin }}
    {{range .Results}}
        <tr>
        <td><a href="/{{.Name}}">{{.Name}}</a></td>
        <td>{{.Result | safeHTML}}</td>             
        </tr>
    {{ end }}
    </tbody>
    </table>    
</main>
{{ end }}