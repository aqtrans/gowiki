{{ define "title" }}Search Results{{ end }}
{{ define "content" }}   
<article>
    <table>
    <thead>
        <tr>
        <th>Link</th>
        <th>Result</th>
        </tr>
    </thead>
    <tbody>
    {{ $user := .page.UserInfo.IsLoggedIn }}
    {{ $admin := .page.UserInfo.IsAdmin }}
    {{range .Results}}
        <tr>
        <td><a href="/{{.Name}}">{{.Name}}</a></td>
        <td>{{.Result | safeHTML}}</td>             
        </tr>
    {{ end }}
    </tbody>
    </table>    
</article>
{{ end }}