{{ define "title" }}Recent Activity{{ end }}
{{ define "content" }}  
<article>
    <table>
    <thead>
        <tr>
        <th>Date</th>
        <th>Commit</th>
        <th>Filenames</th>
        </tr>
    </thead>
    <tbody>
    {{ $user := .page.UserInfo.IsLoggedIn }}
    {{ $admin := .page.UserInfo.IsAdmin }}
    {{range .Recents}}
        <tr>
        <td>{{.Date | prettyDate}}</td>
        <td>{{.Commit}}</td>
        <td>{{range .Filenames}}  <a href="/{{.}}">{{.}}</a>{{end}}</td>
        </tr>
    {{ end }}
    </tbody>
    </table>    
</article>
{{ end }}