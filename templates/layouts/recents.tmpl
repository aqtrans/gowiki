{{ define "title" }}Recent Activity{{ end }}
{{ define "content" }}
<ul class="tabs">
    <li class="tabs-title is-active"><a href="#">{{ svg "history" }} Recent Activity</a></li>
</ul>

<main>
    <table>
    <thead>
        <tr>
        <th>Date</th>
        <th>Commit</th>
        <th>Filenames</th>
        </tr>
    </thead>
    <tbody>
    {{ $user := .UserInfo.IsLoggedIn }}
    {{ $admin := .UserInfo.IsAdmin }}
    {{range .Recents}}
        {{ $commit := .Commit}}
        <tr>
        <td>{{.Date | prettyDate}}</td>
        <td>{{range .Filenames}} <a href="/{{.}}?commit={{$commit}}">{{$commit}}</a>{{end}}</td>
        <td>{{range .Filenames}}  <a href="/{{.}}">{{.}}</a>{{end}}</td>
        </tr>
    {{ end }}
    </tbody>
    </table>    
</main>
{{ end }}