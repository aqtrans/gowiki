{{ define "title" }}<title>{{.page.SiteName}}|Commit of {{ .PageTitle }}</title>{{ end }}
{{ define "content" }}
<link rel="stylesheet" href="/assets/css/diff2html.min.css">
<article class="card">
  <header>
    <h1>{{.PageTitle}}@{{.Commit}}</h1>
  </header>
  <footer class="wiki-toolbar">
    <a href="/{{.Filename}}"><button data-tooltip="View Page" class="tooltip-top pseudobutton"><i class="material-icons centericon">visibility</i></button></a>
    <a href="/{{.Filename}}/edit"><button data-tooltip="Edit Page" class="tooltip-top pseudobutton"><i class="material-icons centericon">edit</i></button></a>
    <a href="/{{.Filename}}/history"><button data-tooltip="Page History" class="tooltip-top pseudobutton"><i class="material-icons centericon">history</i></button></a>
    <a href="#"><button data-tooltip="View Page Commit" class="tooltip-top"><i class="material-icons centericon">undo</i></button></a>
  </footer>  
</article>

<article class="card">
  <header>
    <p>Filename:<span class="info label">{{ .Filename }}</span> Private:<span class="info label">{{ .IsPrivate }}</span> Favorite:<span class="info label">{{ .frontmatter.Favorite }}</span>
    Tags:<span class="info label">{{ .frontmatter.Tags }}</span></p>
    <p>Created:<span class="info label">{{ .CreateTime | prettyDate }}</span> Last Modified:<span class="info label">{{ .ModTime | prettyDate }}</span></p>    
  </header>
  <footer>
    <div class="tabs two">
    <input id='tab-1' type='radio' name='tabgroupB' checked />
    <label class="pseudo button toggle" for="tab-1">File at Commit</label>
    <input id='tab-2' type='radio' name='tabgroupB'>
    <label class="pseudo button toggle" for="tab-2">Commit Diff</label>
    <div class="row">
        <div>
        <article class="card">
        {{.wiki.Rendered | safeHTML}}
        </article>
        </div>

        <div id="diff">
        <article class="card">
        <code>{{.Diff | safeHTML}}</code>
        </article>
        </div>
    </div>
    </div>
  </footer>
</article>


{{ end }}