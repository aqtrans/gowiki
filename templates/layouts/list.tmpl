{{ define "title" }}<title>{{.page.SiteName}}|List</title>{{ end }}
{{ define "content" }}
<main>
<article>
  <header>Wiki Pages</header> 
</article>    
<article>
    <table>
    <thead>
        <tr>
        <th>Link</th>
        <th>Created</th>
        <th>Modified</th>
        <th>Admin</th>
        <th>Private</th>
        <th>Filename</th>
        </tr>
    </thead>
    <tbody>
    {{ $user := .page.UN| isLoggedIn }}
    {{ $role := .page.Role }}
    {{ $admin := .page.Role|isAdmin }}
    {{range .Wikis}}
        <tr>
        <td><a href="/{{.Filename}}">{{.PageTitle}}</a></td>
        <td>{{.CreateTime | prettyDate}}</td>
        <td>{{.ModTime | prettyDate}}</td>    
        <td>{{.frontmatter.Admin}}</td>
        <td>{{.frontmatter.Private}}</td>
        <td>{{.Filename}}</td>             
        </tr>
    {{ end }}
    {{ if $user }}
    {{range .PrivateWikis}}
        <tr>
        <td><a href="/{{.Filename}}">{{.PageTitle}}</a></td>
        <td>{{.CreateTime | prettyDate}}</td>
        <td>{{.ModTime | prettyDate}}</td>    
        <td>{{.frontmatter.Admin}}</td>
        <td>{{.frontmatter.Private}}</td>
        <td>{{.Filename}}</td>             
        </tr>
    {{ end }}
    {{ end }}
    {{ if $admin }}
    {{range .AdminWikis}}
        <tr>
        <td><a href="/{{.Filename}}">{{.PageTitle}}</a></td>
        <td>{{.CreateTime | prettyDate}}</td>
        <td>{{.ModTime | prettyDate}}</td>    
        <td>{{.frontmatter.Admin}}</td>
        <td>{{.frontmatter.Private}}</td>
        <td>{{.Filename}}</td>             
        </tr>
    {{ end }}
    {{ end }}    
    </tbody>
    </table>    
</article>
</main>
{{ end }}