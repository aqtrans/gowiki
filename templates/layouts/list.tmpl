{{ define "title" }}<title>List</title>{{ end }}
{{ define "sidebar" }}
    {{ template "sidebar_nav" . }}
{{ end }}
{{ define "content" }}
<h1>List of things</h1>
<hr />
<h2>Pastes</h2>
<table>
<thead>
    <tr>
    <th width="80">Link</th>
    <th width="100">Date</th>
    <th width="200">Frontmatter</th>
    <th width="10">Private</th>
    <th width="80">Filename</th>
    </tr>
</thead>

<tbody>
{{range .Wikis}}
    <tr>
    <td><a href=/md/{{.Filename}}>{{.PageTitle}}</a></td>
    <td>{{.Frontmatter.Created | prettyDate}}</td>
    <td>{{.Frontmatter}}</td>
    <td>{{.IsPrivate}}</td>
    <td>{{.Filename}}</td>
    </tr>
{{ end }}
</tbody>

</table>
{{ end }}