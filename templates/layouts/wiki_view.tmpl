{{ define "title" }}<title>{{.page.SiteName}}|{{ .PageTitle }}</title>{{ end }}
{{ define "content" }}
<article class="card">
  <header>
    <h1>{{.PageTitle}}</h1>    
  </header>
  <footer>
  <div class="wiki-toolbar">
    <a href="#"><button data-tooltip="View Page" class="tooltip-top"><i class="material-icons centericon">visibility</i></button></a>
    <a href="/{{.Filename}}/edit"><button data-tooltip="Edit Page" class="tooltip-top pseudobutton"><i class="material-icons centericon">edit</i></button></a>
    <a href="/{{.Filename}}/history"><button data-tooltip="Page History" class="tooltip-top pseudobutton"><i class="material-icons centericon">history</i></button></a>
    <button disabled><i class="material-icons centericon">undo</i></button>
  </div>  
  </footer>    
</article>

<article class="card">
  <header>
    <p><span class="wiki-metadata">Filename:<span class="label">{{ .Filename }}</span></span> <span class="wiki-metadata">Private:<span class="label">{{ .IsPrivate }}</span></span> <span class="wiki-metadata">Favorite:<span class="label">{{ .frontmatter.Favorite }}</span></span>
    <span class="wiki-metadata">Tags:<span class="label">{{ .frontmatter.Tags }}</span></p>
    <p><span class="wiki-metadata">Created:<span class="label">{{ .CreateTime | prettyDate }}</span></span> <span class="wiki-metadata">Last Modified:<span class="label">{{ .ModTime | prettyDate }}</span></span></p>    
  </header>
  <footer>
    {{.wiki.Rendered | safeHTML}}
  </footer>
</article>
{{ end }}
