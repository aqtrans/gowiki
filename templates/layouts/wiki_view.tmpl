{{ define "title" }}<title>{{.page.SiteName}}|{{ .Wiki.Title }}</title>{{ end }}
{{ define "content" }}
<style>
 section section article {
   border-top-left-radius: 0;
 }
</style>

<main>
  <article>
    <header>{{.Wiki.Title}}</header>
    <div class="stats">
      <ul>
        <li><p>Filename</p>
        <div class="stat">{{ .Wiki.Filename }}</div></li>
        <li><p>Private</p>
        <div class="stat">{{ .Wiki.Frontmatter.Private }}</div></li>
        <li><p>Favorite</p>
        <div class="stat">{{ .Wiki.Frontmatter.Favorite }}</div></li>
        <li><p>Tags</p>
        <div class="stat">{{ range .Wiki.Frontmatter.Tags }}<span class="badge">{{ . }}</span>{{ end }}</div></li>
      </ul>
    </div>
  </article>

  <ul class="tabs">
    <li class="tabs-title is-active"><a href="#"><i class="fa fa-eye" aria-hidden="true"></i>View Page</a></li>
    <li class="tabs-title"><a href="/{{.Wiki.Filename}}?a=edit"><i class="fa fa-pencil-square-o" aria-hidden="true"></i>Edit Page</a></li>
    <li class="tabs-title"><a href="/{{.Wiki.Filename}}?a=history"><i class="fa fa-history" aria-hidden="true"></i>Page History</a></li>
  </ul>

  <article>
      {{.Rendered | safeHTML}}
        <footer>
          <ul>
            <li>Created: {{ .Wiki.CreateTime | prettyDate }}</li>
            <li>Last Modified: {{ .Wiki.ModTime | prettyDate }}</li>
          </ul>
        </footer>
  </article>
</main>
{{ end }}