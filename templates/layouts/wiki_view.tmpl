{{ define "title" }}{{ .Wiki.Title }}{{ end }}
{{ define "content" }}
  <ul class="tabs">
    <li class="tabs-title is-active"><a href="#">{{ svg "eye" }}View Page</a></li>
    <li class="tabs-title"><a href="/edit/{{.Wiki.Filename}}">{{svg "pencil"}}Edit Page</a></li>
    <li class="tabs-title"><a href="/history/{{.Wiki.Filename}}">{{svg "history"}}Page History</a></li>
  </ul>

  <main>
    <ul class="frontmatter">
      <li><p>Filename</p>
      <div class="stat">{{ .Wiki.Filename }}</div></li>
      <li><p>Permission</p>
      <div class="stat">{{ .Wiki.Frontmatter.Permission }}</div></li>
      <li><p>Favorite</p>
      <div class="stat">
      {{ if .UserInfo.Username }}
        <a href="/fav/{{.Wiki.Filename}}">
        {{ if .Wiki.Frontmatter.Favorite }}{{svg "star-full"}}{{ else  }}{{svg "star-empty"}}{{ end }}</a>
      {{ else }}
        {{ if .Wiki.Frontmatter.Favorite }}{{svg "star-full"}}{{ else  }}{{svg "star-empty"}}{{ end }}
      {{ end }}
      </div></li>
      
      <li><p>Tags</p>
      <div class="stat">
      {{ if .Wiki.Frontmatter.Tags }}
      {{ range .Wiki.Frontmatter.Tags }}<span class="label">{{svg "price-tag"}}{{ . }}</span>{{ end }}
      {{ else }}
      <span class="label">{{svg "price-tags"}}</span>
      {{ end }}
      </div></li>
    </ul>
    {{.Rendered | safeHTML}}
    <hr>
    <footer>
      <ul>
        <li>Created: {{ .Wiki.CreateTime | prettyDate }}</li>
        <li>Last Modified: {{ .Wiki.ModTime | prettyDate }}</li>
      </ul>
    </footer>
  </main>
{{ end }}