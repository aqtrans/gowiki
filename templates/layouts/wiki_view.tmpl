{{ define "title" }}<title>{{.page.SiteName}}|{{ .Wiki.Title }}</title>{{ end }}
{{ define "content" }}
<main>
  <article>
    <header>{{.Wiki.Title}}</header>
    <div class="stats">
      <ul>
        <li><p>Filename</p>
        <div class="stat">{{ .Wiki.Filename }}</div></li>
        <li><p>Public</p>
        <div class="stat">{{ .Wiki.Frontmatter.Public }}</div></li>
        <li><p>Favorite</p>
        <div class="stat">{{ .Wiki.Frontmatter.Favorite }}</div></li>
        <li><p>Tags</p>
        <div class="stat">{{ range .Wiki.Frontmatter.Tags }}<span class="warning label"><i class="fa fa-tag" aria-hidden="true"></i>{{ . }}</span>{{ end }}</div></li>
      </ul>
    </div>
  </article>

  <ul class="ui top attached tabular menu">
    <li class="active item"><a href="#"><i class="fa fa-eye" aria-hidden="true"></i>View Page</a></li>
    <li class="item"><a href="/edit/{{.Wiki.Filename}}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i>Edit Page</a></li>
    <li class="item"><a href="/history/{{.Wiki.Filename}}"><i class="fa fa-history" aria-hidden="true"></i>Page History</a></li>
  </ul>

  <article class="ui bottom attached active tab segment">
      {{.Rendered | safeHTML}}
        <footer>
          <ul>
            <li>Created: {{ .Wiki.CreateTime | prettyDate }}</li>
            <li>Last Modified: {{ .Wiki.ModTime | prettyDate }}</li>
          </ul>
        </footer>
  </article>
</main>
{{ end }}