{{ define "title" }}<title>{{.page.SiteName}}|{{ .PageTitle }}</title>{{ end }}
{{ define "content" }}
<style>
 section section article {
   border-top-left-radius: 0;
 }
</style>

<main>
  <article>
    <header>{{.PageTitle}}</header>
    <div class="stats">
      <ul>
        <li><p>Filename</p>
        <div class="stat">{{ .Filename }}</div></li>
        <li><p>Private</p>
        <div class="stat">{{ .frontmatter.Private }}</div></li>
        <li><p>Favorite</p>
        <div class="stat">{{ .frontmatter.Favorite }}</div></li>
        <li><p>Tags</p>
        <div class="stat">{{ range .frontmatter.Tags }}<span class="badge">{{ . }}</span>{{ end }}</div></li>
      </ul>
    </div>
  </article>

  <ul class="tabs">
    <li class="tabs-title is-active"><a href="#"><i class="fa fa-eye" aria-hidden="true"></i>View Page</a></li>
    <li class="tabs-title"><a href="/{{.Filename}}?a=edit"><i class="fa fa-pencil-square-o" aria-hidden="true"></i>Edit Page</a></li>
    <li class="tabs-title"><a href="/{{.Filename}}?a=history"><i class="fa fa-history" aria-hidden="true"></i>Page History</a></li>
  </ul>

  <article class="tabs-panel is-active">
      {{.wiki.Rendered | safeHTML}}
        <footer>
          <ul>
            <li>Created: {{ .CreateTime | prettyDate }}</li>
            <li>Last Modified: {{ .ModTime | prettyDate }}</li>
          </ul>
        </footer>
  </article>
</main>
{{ end }}