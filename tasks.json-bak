{
	"version": "0.1.0",
	
	"command": "go",
	"args": ["build"],
	"isShellCommand": true,
	
	"showOutput": "silent",
	"problemMatcher": {
		"owner": "go",
		// The file name for reported problems is relative to the current working directory.
		"fileLocation": ["relative", "${cwd}"],
		// The actual pattern to match problems in the output.
		"pattern": {
			"regexp": "^(.+)\\:(\\d+)\\:(.+)$",
			"file": 1,
			"location":2,
			"message": 3	
		}
	}
}
